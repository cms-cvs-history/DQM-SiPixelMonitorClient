#!/bin/bash

this="\033[1;33m\033[1m[startMonitorClient]\033[0m - "

echo -e "$this"
echo -e "$this Starting"
eval `scramv1 ru -sh`
xdaq.exe -h .host -p .portn -e profile.xml &
if ! perl webPingXDAQ.pl .host .portn 10
then
  echo -e "$this xdaq.exe executive didn't start properly"
else
  echo -e "$this xdaq.exe executive started properly"
  perl sendCmdToApp.pl .host .portn SiPixelWebClient.xml
fi
echo -e "$this Done"
echo -e "$this"

